---
import "../global.css";
import { ClientRouter } from "astro:transitions";
import { fade } from "astro:transitions";
import Map from "../components/Map";
import Sidebar from "../components/Sidebar.astro";
import LogoHeader from "../components/LogoHeader.astro";
import { getFestivalsByYear } from "../utils/content.js";

const path = Astro.url.pathname;
const { year } = Astro.params;
const { title } = Astro.props;
const currentYear = year ? +year : new Date().getFullYear();
const festivals = await getFestivalsByYear(currentYear);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <meta property="og:image" content="/preview.webp" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta
      name="description"
      content="Heavy, stoner, doom and psychedelic rock festivals mapped across Europe. Explore 2026 festival dates and locations with an interactive map."
    />
    <ClientRouter />
    <title>{title}</title>
  </head>
  <body>
    <main class="flex h-dvh w-full flex-col bg-gradient-to-t from-[#030405] to-[#15191d] lg:flex-row">
      {path !== "/" && <LogoHeader />}
      <div class="relative h-3/5 w-full flex-grow lg:h-full lg:w-4/6">
        <Map festivals={festivals} path={path} year={currentYear} client:only transition:persist />
      </div>
      <Sidebar transition:animate={fade({ duration: "0.6s" })} client:always>
        <slot />
      </Sidebar>
    </main>
  </body>
</html>
