const changelog = [
  {
    "date": "2026-02-10",
    "content": [
      "Updated Heavy Psych Sounds Fest (Greece, Italy, Switzerland, Belgium, Netherlands), Bluemoon Festival, Bearstone Festival, Stoned from the Underground",
    ],
  },
  { "date": "2026-01-27", "content": ["Updated Red Smoke Festival"] },
  {
    "date": "2026-01-23",
    "content": [
      "Updated Desertfest Liège, Celebration Days, Fekete Zaj",
      "Now showing matching bands from the search bar directly on the festival list",
    ],
  },
